# gem "bcrypt", "~> 3.1.7"

# Windows用タイムゾーンデータ
gem "tzinfo-data", platforms: %i[ windows jruby ]

# 起動高速化
gem "bootsnap", require: false

# 画像変換 [https://guides.rubyonrails.org/active_storage_overview.html#transforming-images]
# gem "image_processing", "~> 1.2"

# CORS対応
