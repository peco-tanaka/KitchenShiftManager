source "https://rubygems.org"

# Rails本体
gem "rails", "~> 7.2.2"
# Active RecordでPostgreSQLを使う
gem "pg", "~> 1.1"
# Pumaウェブサーバー [https://github.com/puma/puma]
gem "puma", ">= 5.0"
# JSON API用 [https://github.com/rails/jbuilder]
# gem "jbuilder"
# 本番でAction Cable用Redis
# gem "redis", ">= 4.0.1"

# Redisの高機能データ型 [https://github.com/rails/kredis]
